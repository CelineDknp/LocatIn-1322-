<% include ./header %>

<div class="container">
    <div class="center-template">    
      <h1>Table <%= table %></h1>
      <table>
        <thead>
          <th></th>
          <th>Numéro</th>
          <th>Numéro de client</th>
          <th>Etat</th>
          <th>Date</th>
          <th>Voiture concernée</th>
          <th>Type de location</th>
          <th>Date d'annulation</th>
          <th>Référence nouvelle réservation</th>
        </thead>
        <tbody>
          <%_ data.forEach(function(el){_%>
            <tr>
              <td><a href='supprimerReservation/<%=el.ID%>' title="Supprimer cette ligne"><img src="/images/supp.png" alt="suppression"></a>
                <a href='editerReservation/<%=el.ID%>' title="Éditer cette ligne"><img src="/images/edit.png" alt="edition"></a></td>
              <td><%=el.ID %></td>
              <td><%=el.NClient %></td>
              <td><%=el.Etat %></td>
              <td><%=el.Date %></td>
              <td><%=el.Voiture %></td>
              <td><%=el.TypeLoc %></td>
              <%_ if(el.DateSuppression == null || el.DateSuppression == "") {_%>
              <td>-</td>
              <%_}_%>
              <%_ if(el.DateSuppression != null && el.DateSuppression != "") {_%>
              <td><%=el.DateSuppression %></td>
              <%_}_%>
              <%_ if(el.NouvelleReserv == null ) {_%>
              <td>-</td>
              <%_}_%>
              <%_ if(el.NouvelleReserv != null) {_%>
              <td><%=el.NouvelleReserv %></td>
              <%_}_%>
            </tr>
          <%_ }); _%>
        </tbody>
      </table>
      <hr>
  </div>
</div>
<% include ./footer %>