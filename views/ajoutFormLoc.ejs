<% include ./header %>
<div class="container-fluid text-center">    
    <div class="col-sm-8 text-left"> 
    <%_ if(data=="null") {_%>
      <h1>Nouvelle formule de location</h1>
      <%_}_%>
      <%_ if(data!="null") {_%>
      <h1>Éditer formule de location</h1>
      <%_}_%>
      <form method="post" action="#" >
       <p>
          <label>Type :</label>
          <select name="type" id="type" required>
            <%_ if(data[0].Type == "jour") {_%>
                <option selected > jour </option>
                <option>semaine</option>
                <option>weekEnd</option>
            <%_}_%>
            <%_ if(data[0].Type == "semaine") {_%>
                <option> jour </option>
                <option selected >semaine</option>
                <option>weekEnd</option>
            <%_}_%>
            <%_ if(data[0].Type == "weekEnd") {_%>
                <option> jour </option>
                <option>semaine</option>
                <option selected >weekEnd</option>
            <%_}_%>
            <%_ if(data == "null") {_%>
                <option> jour </option>
                <option>semaine</option>
                <option>weekEnd</option>
            <%_}_%>
          </select>
      </p>
      <p>
          <label>Kilomètres forfaitaires :</label>
          <input type="number" value="<%= data[0].KMForfait %>" name="km" id="km" min=0 required>
      </p>
      <p>
          <label>Code de tarification :</label>
          <select name="code" id="code" required>
            <%_ tarif.forEach(function(el){_%>
                <%_ if(data[0].CodeTarif == el.Code) {_%>
                <option selected> <%= el.Code %> </option>
                <%_}_%>
                <%_ if(data[0].CodeTarif != el.Code) {_%>
                <option> <%= el.Code %> </option>
                <%_}_%>
            <%_ }); _%>
          </select>
      </p>
      <p>
          <label>Montant forfaitaire :</label>
          <input type="number" value="<%= data[0].MontantForfait %>" name="montant" id="montant" min = 0 required>
      </p>
      <p>
          <button type="submit" class="btn-new" name="val"><%_ if(data=="null") {_%>Ajouter<%_}_%><%_ if(data!="null") {_%>Editer<%_}_%></button>
      </p>
  </form>
    </div>
</div>
<% include ./footer %>