<% include ./header %>
<div class="container-fluid text-center">    
    <div class="col-sm-8 text-left">
      <%_ if(data=="null") {_%>
      <h1>Nouvel assureur</h1>
      <%_}_%>
      <%_ if(data!="null") {_%>
      <h1>Éditer assureur</h1>
      <%_}_%>
      <form method="post" action="#" >
       <p>
          <label>Nom :</label>
          <input type="text" value="<%= data[0].Nom %>" name="nom" id="nom" required >
      </p>
      <p>
          <label>Adresse :</label>
          <input type="text" value="<%= data[0].Adresse %>" name="adresse" id="adresse" required>
      </p>
      <p>
          <label>Téléphone :</label>
          <input type="tel" value="<%= data[0].Telephone %>" name="tel" id="tel" required >
      </p>
      <p>
          <label>Fax :</label>
          <input type="tel" value="<%= data[0].Fax %>" name="fax" id="fax" required >
      </p>
      <p>
          <button type="submit" class="btn-new" name="val"><%_ if(data=="null") {_%>Ajouter<%_}_%><%_ if(data!="null") {_%>Editer<%_}_%></button>
      </p>
  </form>
    </div>
</div>
<% include ./footer %>